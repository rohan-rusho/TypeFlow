<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base Layer: Deep navy-to-teal gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#0A192F"
                android:endColor="#00695C" />
        </shape>
    </item>

    <!-- Soft gold glow at top center -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#FFD70033"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Elegant vignette around edges -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1100dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#00000000"
                android:endColor="#141A2E"/>
        </shape>
    </item>

    <!-- Bottom shadow for depth -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66000000"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
